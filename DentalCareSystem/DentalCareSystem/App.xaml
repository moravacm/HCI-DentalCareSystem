<Application
    x:Class="DentalCareSystem.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:DentalCareSystem"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    StartupUri="Forms/Windows/SignIn.xaml">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                 <materialDesign:BundledTheme 
                    BaseTheme="Light"
                    PrimaryColor="Blue"
                    SecondaryColor="LightBlue"/>

                <!--/<ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Dark.xaml" /> /-->

                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml" />
                <!--<ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.LightBlue.xaml" />-->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />
                
                
                <ResourceDictionary>
                    <Color x:Key="ThemeColor">#a3c7f3</Color>
                    <Color x:Key="ThemeBlueColor">#87cefa</Color>
                    <Color x:Key="ThemeColorDark">#75a9d8</Color>
                    <Color x:Key="ThemeColorDarker">#6a95c7</Color>
                    <Color x:Key="ThemeColorInactive">#a6d9f7</Color>
                    <Color x:Key="ThemeColorActive">#66b6e0</Color>

                    <SolidColorBrush x:Key="ThemeBrush" Color="{DynamicResource ThemeColor}" />
                    <SolidColorBrush x:Key="ThemeBrushDark" Color="{DynamicResource ThemeColorDark}" />
                    <SolidColorBrush x:Key="ThemeBrushDarker" Color="{DynamicResource ThemeColorDarker}" />
                    <SolidColorBrush x:Key="ThemeBrushInactive" Color="{DynamicResource ThemeColorInactive}" />
                    <SolidColorBrush x:Key="ThemeBrushActive" Color="{DynamicResource ThemeColorActive}" />
                    <SolidColorBrush x:Key="ThemeBlueBrush" Color="{DynamicResource ThemeBlueColor}" />
                    <SolidColorBrush x:Key="Theme_Brush_Bg" Color="White" />
                    <SolidColorBrush x:Key="Theme_Brush_SilverBorder" Color="Silver" /> 
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
