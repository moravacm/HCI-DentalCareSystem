<Page
    x:Class="DentalCareSystem.Forms.Pages.AppointmentsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DentalCareSystem.Util"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AppointmentsPage"
    d:DesignHeight="700"
    d:DesignWidth="1000"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <materialDesign:Snackbar
            x:Name="Snackbar"
            Grid.Row="4"
            Width="500"
            VerticalAlignment="Center"
            Background="{StaticResource MaterialDesignSnackbarRipple}"
            IsActive="False"
            MessageQueue="{materialDesign:MessageQueue}" />

        <materialDesign:Card Grid.Row="0" Margin="0,0,0,10">
            <Label
                Margin="10"
                local:LocalizationProvider.ContentID="Appointments"
                FontSize="24"
                FontWeight="Bold"
                Style="{StaticResource MaterialDesignLabel}" />
        </materialDesign:Card>

        <materialDesign:Card Grid.Row="2" Margin="0,0,0,10" Name="Week">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Button
                    x:Name="PreviousWeekButton"
                    Grid.Column="0"
                    Margin="0,0,10,0"
                    Click="PreviousWeekButton_Click"
                    Content="{materialDesign:PackIcon Kind=ChevronLeft}"
                    Style="{StaticResource MaterialDesignIconButton}" />

                <TextBlock
                    x:Name="WeekRangeText"
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="CadetBlue"
                    HorizontalAlignment="Center" />

                <Button
                    x:Name="NextWeekButton"
                    Grid.Column="2"
                    Margin="10,0,0,0"
                    Click="NextWeekButton_Click"
                    Content="{materialDesign:PackIcon Kind=ChevronRight}"
                    Style="{StaticResource MaterialDesignIconButton}" />
                <Button
                    x:Name="TodayButton"
                    Grid.Column="3"
                    Margin="10,0,0,0"
                    Click="TodayButton_Click"
                    Style="{StaticResource MaterialDesignFlatButton}">
                    <Button.Content>
                        <materialDesign:PackIcon Kind="CalendarToday"
                         Width="28" 
                         Height="28"/>
                    </Button.Content>
                    <Button.ToolTip>
                        <TextBlock local:LocalizationProvider.ContentID="Today"/>
                    </Button.ToolTip>
                </Button>
            </Grid>
        </materialDesign:Card>

        <materialDesign:Card Grid.Row="1" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>


                <Grid Grid.Column="1" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="16*"/>
                        <RowDefinition Height="9*"/>
                    </Grid.RowDefinitions>
                </Grid>

                <StackPanel Grid.Column="2" HorizontalAlignment="Right" Orientation="Horizontal">
                    <materialDesign:PopupBox
                        Margin="10,5,10,5"
                        PlacementMode="LeftAndAlignTopEdges"
                        StaysOpen="True"
                        Closed="PopupBox_Closed">
                        <materialDesign:PopupBox.ToggleContent>
                            <materialDesign:PackIcon
                                Width="30"
                                Height="30"
                                Kind="FilterOutline"
                                local:LocalizationProvider.ToolTipID="Filter"/>
                        </materialDesign:PopupBox.ToggleContent>
                        <Grid Width="200" Margin="8,8,8,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="8,8,8,16"
                                local:LocalizationProvider.ContentID="Filter"
                                Style="{StaticResource MaterialDesignHeadline6TextBlock}" />

                            <DatePicker
                                x:Name="DatePicker"
                                Grid.Row="1"
                                Grid.Column="0"
                                Width="140"
                                local:LocalizationProvider.ContentID="Date"
                                Style="{StaticResource MaterialDesignFilledDatePicker}" />

                            <TextBox
                                x:Name="PatientFilterTextBox"
                                Grid.Row="2"
                                Grid.Column="0"
                                Width="140"
                                local:LocalizationProvider.ContentID="PatientJMBG"
                                Style="{StaticResource MaterialDesignFilledTextBox}" />

                            <ComboBox
                                x:Name="DentistComboBox"
                                Grid.Row="3"
                                Grid.Column="0"
                                Width="140"
                                Margin="8,0,8,8"
                                local:LocalizationProvider.ContentID="Dentist"
                                DisplayMemberPath="DisplayName"
                                SelectedValuePath="JMBG"
                                Style="{StaticResource MaterialDesignFilledComboBox}" />

                            <StackPanel
                                Grid.Row="4"
                                Grid.Column="0"
                                Margin="0,10,0,0"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal">
                                <Button
                                    local:LocalizationProvider.ContentID="Apply"
                                    Click="ApplyFilter_Click"
                                    Command="{x:Static materialDesign:PopupBox.ClosePopupCommand}"
                                    Style="{StaticResource MaterialDesignRaisedDarkButton}" />
                                <Button
                                    local:LocalizationProvider.ContentID="Cancel"
                                    Command="{x:Static materialDesign:PopupBox.ClosePopupCommand}"
                                    Style="{StaticResource MaterialDesignFlatDarkButton}" />
                            </StackPanel>
                        </Grid>
                    </materialDesign:PopupBox>

                    <Button
                        local:LocalizationProvider.ToolTipID="Refresh"
                        Margin="0,5,10,5"
                        Click="RefreshButton_Click"
                        Content="{materialDesign:PackIcon Refresh}"
                        Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}" />
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <Grid Grid.Row="3" Name="CalendarView">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                    local:LocalizationProvider.ContentID="Monday" />
                <TextBlock
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                    local:LocalizationProvider.ContentID="Tuesday" />
                <TextBlock
                    Grid.Column="2"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                   local:LocalizationProvider.ContentID="Wednesday" />
                <TextBlock
                    Grid.Column="3"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                    local:LocalizationProvider.ContentID="Thursday" />
                <TextBlock
                    Grid.Column="4"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                    local:LocalizationProvider.ContentID="Friday" />
                <TextBlock
                    Grid.Column="5"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                    local:LocalizationProvider.ContentID="Saturday" />
                <TextBlock
                    Grid.Column="6"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                    local:LocalizationProvider.ContentID="Sunday" />
            </Grid>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <Grid x:Name="CalendarGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid.ContextMenu>
                        <ContextMenu>
                            <MenuItem
                                x:Name="AddAppointmentMenu"
                                local:LocalizationProvider.ContentID="Add"
                                Click="AddAppointment_Click"
                                Icon="{materialDesign:PackIcon Kind=AccountAddOutline}" />
                            <MenuItem
                                x:Name="UpdateAppointmentMenu"
                                local:LocalizationProvider.ContentID="Update"
                                Click="UpdateAppointment_Click"
                                Icon="{materialDesign:PackIcon Kind=Pen}" />
                            <MenuItem
                                x:Name="DeleteAppointmentMenu"
                                local:LocalizationProvider.ContentID="Delete"
                                Click="DeleteAppointment_Click"
                                Icon="{materialDesign:PackIcon Kind=DeleteOutline}" />
                        </ContextMenu>
                    </Grid.ContextMenu>

                </Grid>
            </ScrollViewer>
        </Grid>

        <DataGrid
                x:Name="DataGridAppointments"
                Grid.Row="3"
                Visibility="Collapsed"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                FontFamily="{DynamicResource MaterialDesignFont}"
                FontSize="15"
                IsReadOnly="True"
                ItemsSource="{Binding Items}"
                ScrollViewer.HorizontalScrollBarVisibility="Visible"
                SelectedItem="{Binding Path=SelectedItem, Mode=TwoWay}"
                Style="{StaticResource MaterialDesignDataGrid}">


            <DataGrid.Columns>
                <DataGridTextColumn
                        Width="*"
                        local:LocalizationProvider.ContentID="PatientID"
                        Binding="{Binding PatientJMBG}" />
                <DataGridTextColumn
                        Width="*"
                        local:LocalizationProvider.ContentID="Patient"
                        Binding="{Binding PatientName}" />
                <DataGridTextColumn
                        Width="*"
                        local:LocalizationProvider.ContentID="Dentist"
                        Binding="{Binding DentistName}" />
                <DataGridTextColumn
                        Width="*"
                        local:LocalizationProvider.ContentID="AppointmentDate"
                        Binding="{Binding AppointmentDateTime, StringFormat='dd.MM.yyyy HH:mm'}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>