<Page x:Class="DentalCareSystem.Forms.Pages.DentistsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:DentalCareSystem.Util"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Title="DentistsPage"
      d:DesignHeight="450"
      d:DesignWidth="800"
      mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <materialDesign:Card Grid.Row="0" Margin="0,0,0,10">
            <Label
                Margin="10"
                local:LocalizationProvider.ContentID="Dentists"
                FontSize="24"
                FontWeight="Bold"
                Style="{StaticResource MaterialDesignLabel}" />
        </materialDesign:Card>

        <StackPanel Orientation="Horizontal" Margin="10,10,10,10" Grid.Row="1">
            <TextBox x:Name="SearchJMBGTextBox"
                     Width="200"
                     Margin="0,0,10,0"
                     Style="{StaticResource MaterialDesignTextBox}"
                     local:LocalizationProvider.ContentID="SearchByID" />
            <Button Style="{StaticResource MaterialDesignRaisedButton}"
                    local:LocalizationProvider.ContentID="Search"
                    Click="SearchJMBG_Click" />
            <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="10,0,0,0"
                    local:LocalizationProvider.ContentID="Reset"
                    Click="ResetSearch_Click" />
        </StackPanel>

        <DataGrid
            x:Name="DataGridDentists"
            Grid.Row="2"
            VerticalAlignment="Stretch"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            FontFamily="{DynamicResource MaterialDesignFont}"
            FontSize="15"
            IsReadOnly="True"
            ItemsSource="{Binding Items}"
            ScrollViewer.HorizontalScrollBarVisibility="Visible"
            SelectedItem="{Binding Path=SelectedItem, Mode=TwoWay}"
            Style="{StaticResource MaterialDesignDataGrid}">

            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="Auto"
                    MinWidth="200"
                    local:LocalizationProvider.ContentID="ID"
                    Binding="{Binding JMBG}" />    
                <DataGridTextColumn
                    Width="*"
                    local:LocalizationProvider.ContentID="FirstName"
                    Binding="{Binding FirstName}" />
                <DataGridTextColumn
                    Width="*"
                    local:LocalizationProvider.ContentID="LastName"
                    Binding="{Binding LastName}" />
                <DataGridTextColumn
                    Width="*"
                    local:LocalizationProvider.ContentID="PhoneNumber"
                    Binding="{Binding PhoneNumber}" />
                <DataGridTextColumn
                    Width="*"
                    local:LocalizationProvider.ContentID="Email"
                    Binding="{Binding Email}" />
                <DataGridTextColumn
                    Width="*"
                    local:LocalizationProvider.ContentID="Specialization"
                    Binding="{Binding Specialization}" />
            </DataGrid.Columns>
        </DataGrid>

        <materialDesign:Snackbar
            x:Name="DentistsSnackbar"
            Grid.Row="3"
            Width="500"
            Background="{StaticResource MaterialDesignSnackbarRipple}"
            IsActive="False"
            MessageQueue="{materialDesign:MessageQueue}" />
    </Grid>
</Page>
