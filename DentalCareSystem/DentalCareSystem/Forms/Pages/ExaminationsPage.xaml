<Page
    x:Class="DentalCareSystem.Forms.Pages.ExaminationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DentalCareSystem.Util"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ExaminationPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <materialDesign:Snackbar
            x:Name="Snackbar"
            Grid.Row="3"
            Width="500"
            VerticalAlignment="Center"
            Background="{StaticResource MaterialDesignSnackbarRipple}"
            IsActive="False"
            MessageQueue="{materialDesign:MessageQueue}" />

        <materialDesign:Card Grid.Row="0" Margin="0,0,0,10">
            <Label
                Grid.Column="0"
                Margin="10"
                local:LocalizationProvider.ContentID="Examinations"
                FontSize="24"
                FontWeight="Bold"
                Style="{StaticResource MaterialDesignLabel}" />
        </materialDesign:Card>

        <materialDesign:Card Grid.Row="1" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" HorizontalAlignment="Left" Orientation="Horizontal">
                    <materialDesign:PopupBox
                        Margin="10,5,10,5"
                        PlacementMode="TopAndAlignCentres"
                        StaysOpen="True">
                        <materialDesign:PopupBox.ToggleContent>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    Width="34"
                                    Height="34"
                                    Kind="SortVariant"
                                    VerticalAlignment="Center" 
                                    local:LocalizationProvider.ToolTipID="Sort"/>
                            </StackPanel>
                        </materialDesign:PopupBox.ToggleContent>
                        <Grid Width="250" Margin="8,8,8,8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Margin="8,8,8,16"
                                local:LocalizationProvider.ContentID="SortBy"
                                Style="{StaticResource MaterialDesignHeadline6TextBlock}" />

                            <ComboBox
                                x:Name="SortComboBox"
                                Grid.Row="1"
                                Margin="8,5,8,10"
                                Style="{StaticResource MaterialDesignFilledComboBox}"
                                SelectedIndex="0">
                                <ComboBoxItem local:LocalizationProvider.ContentID="DateAscending" Tag="0"/>
                                <ComboBoxItem local:LocalizationProvider.ContentID="DateDescending" Tag="1"/>
                            </ComboBox>

                            <StackPanel
                                Grid.Row="3"
                                Margin="0,10,0,0"
                                HorizontalAlignment="Left"
                                Orientation="Horizontal">
                                <Button
                                    local:LocalizationProvider.ContentID="Apply"
                                    Click="ApplySortButton_Click"
                                    Command="{x:Static materialDesign:PopupBox.ClosePopupCommand}"
                                    Style="{StaticResource MaterialDesignRaisedDarkButton}" />
                                <Button
                                    local:LocalizationProvider.ContentID="Cancel"
                                    Command="{x:Static materialDesign:PopupBox.ClosePopupCommand}"
                                    Style="{StaticResource MaterialDesignFlatDarkButton}"
                                    Margin="10,0,0,0" />
                            </StackPanel>
                        </Grid>
                    </materialDesign:PopupBox>
                </StackPanel>

                <Grid Grid.Column="1" />

                <StackPanel Grid.Column="2" HorizontalAlignment="Right" Orientation="Horizontal">
                    <materialDesign:PopupBox
                        Margin="10,5,10,5"
                        PlacementMode="LeftAndAlignTopEdges"
                        StaysOpen="True"
                        Closed="PopupBox_Closed">
                        <materialDesign:PopupBox.ToggleContent>
                            <materialDesign:PackIcon
                                Width="30"
                                Height="30"
                                Kind="FilterOutline"
                                local:LocalizationProvider.ToolTipID="Filter"/>
                        </materialDesign:PopupBox.ToggleContent>
                        <Grid Width="200" Margin="8,8,8,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="8,8,8,16"
                                local:LocalizationProvider.ContentID="Filter"
                                Style="{StaticResource MaterialDesignHeadline6TextBlock}" />

                            <DatePicker
                                x:Name="DatePicker"
                                Grid.Row="1"
                                Grid.Column="0"
                                Width="140"
                                local:LocalizationProvider.ContentID="Date"
                                Style="{StaticResource MaterialDesignFilledDatePicker}" />

                            <TextBox
                                x:Name="PatientFilterTextBox"
                                Grid.Row="2"
                                Grid.Column="0"
                                Width="140"
                                local:LocalizationProvider.ContentID="PatientJMBG"
                                Style="{StaticResource MaterialDesignFilledTextBox}" />

                            <ComboBox
                                x:Name="DentistComboBox"
                                Grid.Row="3"
                                Grid.Column="0"
                                Width="140"
                                Margin="8,0,8,8"
                                local:LocalizationProvider.ContentID="Dentist"
                                DisplayMemberPath="DisplayName"
                                SelectedValuePath="JMBG"
                                Style="{StaticResource MaterialDesignFilledComboBox}" />

                            <StackPanel
                                Grid.Row="4"
                                Grid.Column="0"
                                Margin="0,10,0,0"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal">
                                <Button
                                    local:LocalizationProvider.ContentID="Apply"
                                    Click="ApplyFilter_Click"
                                    Command="{x:Static materialDesign:PopupBox.ClosePopupCommand}"
                                    Style="{StaticResource MaterialDesignRaisedDarkButton}" />
                                <Button
                                    local:LocalizationProvider.ContentID="Cancel"
                                    Command="{x:Static materialDesign:PopupBox.ClosePopupCommand}"
                                    Style="{StaticResource MaterialDesignFlatDarkButton}" />
                            </StackPanel>
                        </Grid>
                    </materialDesign:PopupBox>

                    <Button
                        local:LocalizationProvider.ToolTipID="Refresh"
                        Margin="0,5,10,5"
                        Click="RefreshButton_Click"
                        Content="{materialDesign:PackIcon Refresh}"
                        Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}" />
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <DataGrid
            x:Name="DataGridExaminations"
            Grid.Row="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            FontFamily="{DynamicResource MaterialDesignFont}"
            FontSize="15"
            IsReadOnly="True"
            ItemsSource="{Binding Items}"
            ScrollViewer.HorizontalScrollBarVisibility="Visible"
            SelectedItem="{Binding Path=SelectedItem, Mode=TwoWay}"
            Style="{StaticResource MaterialDesignDataGrid}">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem
                        local:LocalizationProvider.ContentID="Add"
                        Click="AddExamination_Click"
                        Icon="{materialDesign:PackIcon Kind=AccountAddOutline}" />
                    <MenuItem
                        local:LocalizationProvider.ContentID="Update"
                        Click="UpdateExamination_Click"
                        Icon="{materialDesign:PackIcon Kind=Pen}" />
                    <MenuItem
                        local:LocalizationProvider.ContentID="Delete"
                        Click="DeleteExamination_Click"
                        Icon="{materialDesign:PackIcon Kind=DeleteOutline}" />
                    <Separator />
                    <MenuItem
                        local:LocalizationProvider.ContentID="ViewDetails"
                        Click="ViewDetails_Click"
                        Icon="{materialDesign:PackIcon Kind=EyeOutline}" /> 
                </ContextMenu>
            </DataGrid.ContextMenu>

            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    local:LocalizationProvider.ContentID="PatientID"
                    Binding="{Binding PatientJMBG}" />
                <DataGridTextColumn
                    Width="*"
                    local:LocalizationProvider.ContentID="Patient"
                    Binding="{Binding PatientName}" />
                <DataGridTextColumn
                    Width="*"
                    local:LocalizationProvider.ContentID="Dentist"
                    Binding="{Binding DentistName}" />
                <DataGridTextColumn
                    Width="*"
                    local:LocalizationProvider.ContentID="Date"
                    Binding="{Binding ExaminationDate, StringFormat='dd.MM.yyyy HH:mm'}" />
                <DataGridTextColumn
                    Width="*"
                    local:LocalizationProvider.ContentID="Diagnosis"
                    Binding="{Binding Diagnosis}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>