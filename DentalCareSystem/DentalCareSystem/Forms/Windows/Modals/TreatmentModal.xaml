<Window
    x:Class="DentalCareSystem.Forms.Windows.Modals.TreatmentModal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DentalCareSystem.Util"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="TreatmentModal"
    Width="500"
    Height="350"
    AllowsTransparency="True"
    Background="#33000000"
    WindowStartupLocation="CenterOwner"
    WindowState="Maximized"
    WindowStyle="None"
    mc:Ignorable="d">

    <Grid
        Margin="0,0,0,0"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Background="{StaticResource MaterialDesignCardBackground}">

        <materialDesign:Snackbar
            x:Name="TreatmentModalSnackbar"
            Background="{StaticResource MaterialDesignSnackbarRipple}"
            IsActive="False"
            MessageQueue="{materialDesign:MessageQueue}" />

        <StackPanel
            MinWidth="300"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            UseLayoutRounding="False">
            <Label
                x:Name="ModalTitle"
                Margin="20,20,20,0"
                Padding="4,4,4,4"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontSize="16"
                FontWeight="Bold"
                local:LocalizationProvider.ContentID="AddNewTreatment" />

            <TextBox
                x:Name="NameTextBox"
                MaxWidth="250"
                Margin="0,20,0,10"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Stretch"
                Style="{StaticResource MaterialDesignFilledTextBox}"
                TabIndex="0"
                Text="{Binding Name}"
                local:LocalizationProvider.ContentID="Name" />

            <TextBox
                x:Name="PriceTextBox"
                MaxWidth="250"
                Margin="0,20,0,10"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Stretch"
                Style="{StaticResource MaterialDesignFilledTextBox}"
                TabIndex="1"
                Text="{Binding Price}"
                local:LocalizationProvider.ContentID="Price" />

            <StackPanel
                Margin="0,20,0,50"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    MinWidth="110"
                    Margin="0,0,30,0"
                    HorizontalAlignment="Left"
                    Click="AddOrUpdate_Click"
                    FontSize="16"
                    FontWeight="Bold"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    TabIndex="2"
                    local:LocalizationProvider.ContentID="Save" />
                <Button
                    MinWidth="110"
                    BorderBrush="#FF7D7373"
                    BorderThickness="1"
                    Click="Cancel_Click"
                    FontSize="16"
                    FontWeight="Bold"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    TabIndex="3"
                    local:LocalizationProvider.ContentID="Cancel" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>