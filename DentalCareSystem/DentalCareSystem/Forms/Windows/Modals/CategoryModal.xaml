<Window
    x:Class="DentalCareSystem.Forms.Windows.Modals.CategoryModal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DentalCareSystem.Util"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="CategoryModal"
    AllowsTransparency="True"
    Background="#33000000"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Grid
        Margin="0,0,0,0"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Background="{StaticResource MaterialDesignCardBackground}">

        <materialDesign:Snackbar
            x:Name="CategoryModalSnackbar"
            Background="{StaticResource MaterialDesignSnackbarRipple}"
            IsActive="False"
            MessageQueue="{materialDesign:MessageQueue}" />

        <StackPanel
            MinWidth="300"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch"
            UseLayoutRounding="False">
            <Label
                Margin="20,20,20,0"
                Padding="4,4,4,4"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                x:Name="ModalTitle"
                FontSize="16"
                FontWeight="Bold" />

            <TextBox
                x:Name="NameTextBox"
                MaxWidth="250"
                Margin="0,20,0,10"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Stretch"
                local:LocalizationProvider.ContentID="CategoryName"
                Style="{StaticResource MaterialDesignFilledTextBox}"
                TabIndex="0"
                Text="{Binding Name}" />

            <StackPanel
                Margin="0,0,0,50"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    MinWidth="110"
                    Margin="0,0,30,0"
                    HorizontalAlignment="Left"
                    local:LocalizationProvider.ContentID="Save"
                    Click="AddOrUpdate_Click"
                    FontSize="16"
                    FontWeight="Bold"
                    TabIndex="1" />
                <Button
                    MinWidth="110"
                    local:LocalizationProvider.ContentID="Cancel"
                    BorderBrush="#FF7D7373"
                    BorderThickness="1,1,1,1"
                    Click="Cancel_Click"
                    FontSize="16"
                    FontWeight="Bold"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    TabIndex="2" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>