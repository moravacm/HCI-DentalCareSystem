<Window x:Class="DentalCareSystem.Forms.Windows.Modals.DetailedBillModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:DentalCareSystem.Util"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="DetailedBillModal"
        AllowsTransparency="True"
        Background="#33000000"
        FontFamily="{StaticResource MaterialDesignFont}"
        FontSize="15"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None"
        mc:Ignorable="d">

    <Grid
        Width="450"
        MinHeight="300"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Background="{StaticResource MaterialDesignCardBackground}">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label
            Grid.Row="0"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            local:LocalizationProvider.ContentID="Bill"
            x:Name="ModalTitle"
            FontSize="24"
            Style="{StaticResource MaterialDesignLabel}" />

        <DataGrid
            x:Name="DataGridItems"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="20,10,20,10"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            IsReadOnly="True"
            Style="{StaticResource MaterialDesignDataGrid}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="3*"
                    local:LocalizationProvider.ContentID="Name"
                    Binding="{Binding TreatmentName}"
                    Header="Treatment" />
                <DataGridTextColumn
                    Width="*"
                    local:LocalizationProvider.ContentID="Price"
                    Binding="{Binding Price, StringFormat='{}{0} KM'}"
                    Header="Price" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Margin="20,0,20,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Label
                Margin="0,0,10,0"
                Padding="4,4,4,4"
                local:LocalizationProvider.ContentID="TotalPrice"
                FontWeight="Bold"
                Style="{StaticResource MaterialDesignLabel}" />
            <Label
                x:Name="TotalPriceLabel"
                ContentStringFormat=" {}{0} KM"
                Style="{StaticResource MaterialDesignLabel}" />
        </StackPanel>

        <StackPanel
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Margin="20,0,20,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Label
                Margin="0,0,10,0"
                Padding="4,4,4,4"
                local:LocalizationProvider.ContentID="DateTime"
                FontWeight="Bold"
                Style="{StaticResource MaterialDesignLabel}" />
            <Label
                x:Name="DateTimeLabel"
                HorizontalAlignment="Center"
                Style="{StaticResource MaterialDesignLabel}" />
        </StackPanel>

        <StackPanel
            Grid.Row="4"
            Grid.ColumnSpan="2"
            Margin="20,0,20,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Label
                Margin="0,0,10,0"
                Padding="4,4,4,4"
                local:LocalizationProvider.ContentID="Employee"
                FontWeight="Bold"
                Style="{StaticResource MaterialDesignLabel}" />
            <Label
                x:Name="MedicalTechnicianLabel"
                HorizontalAlignment="Center"
                Style="{StaticResource MaterialDesignLabel}" />
        </StackPanel>

        <StackPanel
            Grid.Row="5"
            Grid.ColumnSpan="2"
            Margin="20,0,20,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Label
                Margin="0,0,10,0"
                Padding="4,4,4,4"
                local:LocalizationProvider.ContentID="Patient"
                FontWeight="Bold"
                Style="{StaticResource MaterialDesignLabel}" />
            <Label
                x:Name="PatientLabel"
                HorizontalAlignment="Center"
                Style="{StaticResource MaterialDesignLabel}" />
        </StackPanel>

        <Button
            Grid.Row="6"
            Grid.Column="1"
            Margin="20,10,20,20"
            HorizontalAlignment="Right"
            local:LocalizationProvider.ContentID="Close"
            Click="CloseButton_Click"
            Style="{StaticResource MaterialDesignOutlinedButton}" />
    </Grid>
</Window>