<Window
    x:Class="DentalCareSystem.Forms.Windows.Modals.ExaminationModal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DentalCareSystem.Util"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ExaminationModal"
    AllowsTransparency="True"
    Background="#33000000"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None"
    WindowState="Maximized"
    mc:Ignorable="d">

    <materialDesign:Card
        Width="650"
        MinHeight="550"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Margin="20">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0"
                        Background="{DynamicResource PrimaryHueMidBrush}"
                        Margin="0">
                <Label
                    Margin="20,20,20,0"
                    Padding="4,4,4,4"
                    HorizontalAlignment="Center"
                    x:Name="ModalTitle"
                    VerticalAlignment="Top"
                    FontSize="16"
                    FontWeight="Bold" />

            </StackPanel>

            <ScrollViewer Grid.Row="1" Margin="20,10,20,10">
                <StackPanel Orientation="Vertical">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <materialDesign:Card Grid.Column="0" Margin="0,5,5,15" Padding="15">
                            <StackPanel>
                                <TextBlock
                                    local:LocalizationProvider.ContentID="AppointmentSelection"
                                    Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                    Margin="0,0,0,10"
                                    FontWeight="Bold" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBox
                                        Grid.Column="0"
                                        local:LocalizationProvider.ContentID="AppointmentId"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                        Text="{Binding AppointmentId, UpdateSourceTrigger=PropertyChanged}"
                                        KeyDown="AppointmentIdTextBox_KeyDown"
                                        Margin="0,0,10,0" />
                                    <Button
                                        Grid.Column="1"
                                        Style="{StaticResource MaterialDesignIconButton}"
                                        Command="{Binding SearchAppointmentCommand}">
                                        <materialDesign:PackIcon Kind="Magnify" />
                                    </Button>
                                    <Button
                                        Grid.Column="2"
                                        Style="{StaticResource MaterialDesignIconButton}"
                                        Command="{Binding BrowseAppointmentsCommand}">
                                        <materialDesign:PackIcon Kind="CalendarSearch" />
                                    </Button>
                                </Grid>
                                <TextBlock
                                    Text="{Binding AppointmentInfo}"
                                    Style="{StaticResource MaterialDesignBody2TextBlock}"
                                    Margin="0,10,0,0"
                                    Foreground="{DynamicResource MaterialDesignBodyLight}"
                                    FontStyle="Italic" />
                            </StackPanel>
                        </materialDesign:Card>

                        <Separator Grid.Column="1" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Foreground="LightGray" VerticalAlignment="Stretch" Margin="5,0,5,0" />

                        <materialDesign:Card Grid.Column="2" Margin="5,5,0,15" Padding="15">
                            <StackPanel>
                                <TextBlock
                                    local:LocalizationProvider.ContentID="MedicalTechnician"
                                    Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                    Margin="0,0,0,10"
                                    FontWeight="Bold" />
                                <ComboBox
                                    local:LocalizationProvider.ContentID="SelectMedicalTechnician"
                                    Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                                    ItemsSource="{Binding MedicalTechnicians}"
                                    SelectedValue="{Binding SelectedMedicalTechnicianJMBG}"
                                    SelectedValuePath="JMBG"
                                    DisplayMemberPath="FullName" />
                            </StackPanel>
                        </materialDesign:Card>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <materialDesign:Card Grid.Column="0" Margin="0,5,5,15" Padding="15">
                            <StackPanel>
                                <TextBlock
                                    local:LocalizationProvider.ContentID="Treatments"
                                    Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                    Margin="0,0,0,10"
                                    FontWeight="Bold" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <ComboBox
                                        x:Name="TreatmentComboBox"
                                        Grid.Column="0"
                                        local:LocalizationProvider.ContentID="SelectTreatment"
                                        Style="{StaticResource MaterialDesignFilledComboBox}"
                                        ItemsSource="{Binding AvailableTreatments}"
                                        DisplayMemberPath="Name"
                                        SelectedValuePath="TreatmentId"
                                        SelectedValue="{Binding SelectedTreatmentId}" />
                                    <Button
                                        Grid.Column="1"
                                        Margin="10,0,0,0"
                                        Style="{StaticResource MaterialDesignRaisedLightButton}"
                                        Command="{Binding AddTreatmentCommand}">
                                        <materialDesign:PackIcon Kind="PlusCircle" />
                                    </Button>
                                </Grid>
                                <ListView
                                    x:Name="TreatmentsListView"
                                    ItemsSource="{Binding SelectedTreatments}"
                                    Margin="0,10,0,0"
                                    MaxHeight="120">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center" />
                                                <Button
                                                    Grid.Column="1"
                                                    Style="{StaticResource MaterialDesignFlatButton}"
                                                    Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"
                                                    Command="{Binding DataContext.RemoveTreatmentCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    local:LocalizationProvider.ContentID="RemoveTreatment">
                                                    <materialDesign:PackIcon Kind="Close" />
                                                </Button>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackPanel>
                        </materialDesign:Card>

                        <Separator Grid.Column="1" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Foreground="LightGray" VerticalAlignment="Stretch" Margin="5,0,5,0" />

                        <materialDesign:Card Grid.Column="2" Margin="5,5,0,15" Padding="15">
                            <StackPanel>
                                <TextBlock
                                    local:LocalizationProvider.ContentID="Materials"
                                    Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                    Margin="0,0,0,10"
                                    FontWeight="Bold" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <ComboBox
                                        x:Name="MaterialComboBox"
                                        Grid.Column="0"
                                        local:LocalizationProvider.ContentID="SelectMaterial"
                                        Style="{StaticResource MaterialDesignFilledComboBox}"
                                        ItemsSource="{Binding AvailableMaterials}"
                                        DisplayMemberPath="Name"
                                        SelectedValuePath="MaterialId"
                                        SelectedValue="{Binding SelectedMaterialId}" />
                                    <TextBox
                                        Grid.Column="1"
                                        local:LocalizationProvider.ContentID="Quantity"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                        Text="{Binding MaterialQuantity, UpdateSourceTrigger=PropertyChanged}"
                                        Margin="10,0,0,0" />
                                    <Button
                                        Grid.Column="2"
                                        Margin="10,0,0,0"
                                        Style="{StaticResource MaterialDesignRaisedLightButton}"
                                        Command="{Binding AddMaterialCommand}">
                                        <materialDesign:PackIcon Kind="PlusCircle" />
                                    </Button>
                                </Grid>
                                <ListView
                                    x:Name="MaterialsListView"
                                    ItemsSource="{Binding SelectedMaterials}"
                                    Margin="0,10,0,0"
                                    MaxHeight="120">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="80" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center" />
                                                <TextBlock
                                                    Grid.Column="1"
                                                    Text="{Binding Quantity}"
                                                    VerticalAlignment="Center"
                                                    Margin="10,0,0,0" />
                                                <Button
                                                    Grid.Column="2"
                                                    Style="{StaticResource MaterialDesignFlatButton}"
                                                    Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"
                                                    Command="{Binding DataContext.RemoveMaterialCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    local:LocalizationProvider.ContentID="RemoveMaterial">
                                                    <materialDesign:PackIcon Kind="Close" />
                                                </Button>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackPanel>
                        </materialDesign:Card>
                    </Grid>

                    <materialDesign:Card Margin="0,5,0,15" Padding="15">
                        <StackPanel>
                            <TextBlock
                                local:LocalizationProvider.ContentID="Diagnosis"
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                Margin="0,0,0,10"
                                FontWeight="Bold" />
                            <TextBox
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                Text="{Binding Diagnosis, UpdateSourceTrigger=PropertyChanged}"
                                AcceptsReturn="True"
                                TextWrapping="Wrap"
                                Height="100" />
                        </StackPanel>
                    </materialDesign:Card>
                </StackPanel>
            </ScrollViewer>

            <Grid Grid.Row="2" Margin="20,10,20,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel
                    Margin="0,0,0,50"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        MinWidth="110"
                        Margin="0,0,30,0"
                        HorizontalAlignment="Left"
                        local:LocalizationProvider.ContentID="Save"
                        Click="AddOrUpdate_Click"
                        FontSize="16"
                        FontWeight="Bold"
                        TabIndex="7" />
                    <Button
                        MinWidth="110"
                        local:LocalizationProvider.ContentID="Cancel"
                        BorderBrush="#FF7D7373"
                        BorderThickness="1,1,1,1"
                        Click="Cancel_Click"
                        FontSize="16"
                        FontWeight="Bold"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        TabIndex="8" />
                </StackPanel>
            </Grid>

            <materialDesign:Snackbar
                x:Name="ExaminationModalSnackbar"
                Grid.Row="2"
                MessageQueue="{materialDesign:MessageQueue}" />
        </Grid>
    </materialDesign:Card>
</Window>